{
  "variables": {
    "iso_url": "https://ftp.halifax.rwth-aachen.de/blackarch/iso/blackarch-linux-live-2020.01.01-x86_64.iso",
    "iso_checksum": "434e6f5f025a9219f70a8881bfe5fec977250a53",
    "iso_checksum_type": "sha1",
    "ssh_timeout": "20m",
    "country": "US",
    "created_at": "{{ isotime }}",
    "arch": "x86_64"
  },
  "builders": [
    {
        "type": "virtualbox-iso",
        "iso_url": "{{ user `iso_url` }}",
        "iso_checksum": "{{ user `iso_checksum` }}",
        "iso_checksum_type": "{{ user `iso_checksum_type` }}",
        "guest_os_type": "ArchLinux_64",
        "guest_additions_mode": "disable",
        "http_directory": "srv",
        "boot_wait": "5s",
        "disk_size": 30720,
        "hard_drive_interface": "sata",
        "ssh_username": "root",
        "ssh_password": "blackarch",
        "ssh_timeout": "{{ user `ssh_timeout` }}",
        "shutdown_command": "systemctl start poweroff.timer",
        "headless" : "{{ user `headless`}}"
    }
  ]
}
